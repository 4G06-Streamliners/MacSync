# Database Configuration
# For local development (backend running locally, postgres in docker):
DATABASE_URL=postgresql://postgres:postgres@localhost:5434/macsync_db

# For docker-compose (backend in docker):
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/macsync_db

# Server Configuration
PORT=3000
NODE_ENV=development

# Auth Configuration
JWT_SECRET=change-me
JWT_EXPIRES_IN=60m
VERIFICATION_CODE_EXPIRY_MIN=10
VERIFICATION_CODE_SECRET=change-me
# Optional password settings
BCRYPT_SALT_ROUNDS=10

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=no-reply@mcmaster.ca

# Optional: run seed on startup if DB is empty (idempotent)
# RUN_SEED=true

# PostgreSQL Credentials (matching docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=macsync_db
